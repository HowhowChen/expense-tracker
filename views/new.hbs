<form novalidate id="form" action="/records/new" method="POST">
  <div class="row mt-5">
    <div class="col-md-8 m-auto">
      <div class="">
        <div class="row align-items-center mb-5">
          <div class="col-3 text-danger">
            *必填欄位 
          </div>
          <h1 class="col-9 text-center text-secondary">
            新增支出
          </h1>
          
        </div>
        <div class="mt-3 text-danger text-center">
          {{#each errors}}
            {{ this.message }}
            <br>
          {{/each}} 
        </div>
        
        <div class="row align-items-center mb-5 h3">
          <label for="name" class="col-3">名稱:</label>
          <div class="col-9">
            <input id="name" name="name" type="text" class="form-control" placeholder="午餐" value="{{ records.name }}" required>
              <div class="valid-feedback">Good!</div>
              <div class="invalid-feedback">This field is required</div>
            </div>
          </div>
        </div>

        <div class="row align-items-center mb-5 h3">
          <label for="date" class="col-3">日期:</label>
          <div class="col-9">
            <input id="date" name="date" type="date" class="form-control" value="{{ records.date }}" required>
            <div class="valid-feedback">Good!</div>
            <div class="invalid-feedback">This field is required</div>
          </div>
        </div>

        <div class="row align-items-center mb-5 h3">
          <label for="category" class="col-3">類別:</label>
          <div class="col-9">
            <input id="category" name="category" list="categories" class="form-control" placeholder="餐飲食品" value="{{ records.category }}" required>
            <div class="valid-feedback">Good!</div>
            <div class="invalid-feedback">This field is required</div>
            <datalist id="categories">
              <option>家居物業</option>
              <option>交通出行</option>
              <option>休閒娛樂</option>
              <option>餐飲食品</opiton>
              <option>其他</option>
            </datalist>
          </div>
        </div>

        <div class="row align-items-center mb-5 h3">
          <label for="amount" class="col-3">金額:</label>
          <div class="col-9">
            <input id="amount" name="amount" type="number" class="form-control" placeholder="3000"  value="{{ records.amount }}" required>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <button type="reset" class="btn btn-danger">重設</button>&nbsp
          <button id="submitButton" type="submit" class="btn btn-primary">送出</button>
        </div>

      </div>
    </div>
  </div>
</form>

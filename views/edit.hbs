<form novalidate id="form" action="/records/{{record._id}}?_method=PUT" method="POST">
  <div class="row mt-5">
    <div class="col-md-8 m-auto">
      <div class="">
        <div class="row align-items-center mb-5">
          <div class="col-3 text-danger">
            *必填欄位 
          </div>
          <h1 class="col-9 text-center text-secondary">
            修改支出
          </h1>
          
        </div>
        <div class="mt-3 text-danger text-center">
          {{#each errors}}
            {{ this.message }}
            <br>
          {{/each}} 
        </div>
        
        <div class="row align-items-center mb-5 h3">
          <label for="name" class="col-3">名稱<span class="text-danger">*</span>:</label>
          <div class="col-9">
            <input id="name" name="name" type="text" class="form-control" value="{{ record.name }}" required>
              <div class="valid-feedback">Good!</div>
              <div class="invalid-feedback">This field is required</div>
            </div>
          </div>
        </div>

        <div class="row align-items-center mb-5 h3">
          <label for="date" class="col-3">日期<span class="text-danger">*</span>:</label>
          <div class="col-9">
            <input id="date" name="date" type="date" class="form-control" value="{{record.date}}" required>
            <div class="valid-feedback">Good!</div>
            <div class="invalid-feedback">This field is required</div>
          </div>
        </div>

        <div class="row align-items-center mb-5 h3">
          <label for="category" class="col-3">類別<span class="text-danger">*</span>:</label>
          <div class="col-9">
            <select id="category" name="category" list="categories" class="form-control"  required>
              {{#each categories}}
                <option value="{{this.name}}" {{this.selected}}>{{this.name}}</option>
              {{/each}}
            </select>
            <div class="valid-feedback">Good!</div>
            <div class="invalid-feedback">This field is required</div>
          </div>
        </div>

        <div class="row align-items-center mb-5 h3">
          <label for="amount" class="col-3">金額<span class="text-danger">*</span>:</label>
          <div class="col-9">
            <input id="amount" name="amount" type="number" class="form-control" value="{{ record.amount }}" required>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <button type="reset" class="btn btn-danger">重設</button>&nbsp
          <button id="submitButton" type="submit" class="btn btn-primary">送出</button>
        </div>

      </div>
    </div>
  </div>
</form>

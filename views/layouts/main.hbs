<!DOCTYPE html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Expense Tracker</title>
  {{!-- font-awesome --}}
  <script src="https://kit.fontawesome.com/750228b3da.js" crossorigin="anonymous"></script>
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>

  <header>
    <!-- navigation -->
    <nav class="navbar navbar-light bg-success p-2 text-light">
      <div class="container">
          <a class="navbar-brand" href="/">
            <img src="/images/saving.png" width="30" height="30" class="d-inline-block align-top" alt="好。吃">
            {{#if isAuthenticated}}{{user.name}}'s {{/if}}<span class="text-light">記帳本</span>
          </a>
          {{#if isAuthenticated}}
            <div class="d-flex">
              <a href="/records/new"><button class="btn btn-outline-light me-2">新增</button></a>
              <a href="/records/logout"><button class="btn btn-outline-danger">登出</button></a>
            </div>
          {{else}}
            <div class="d-flex">
              <a href="/records/login"><button class="btn btn-outline-light me-2">登入</button></a>
            </div>
          {{/if}}
      </div>
    </nav>
  </header>

  <!-- partial templates will replace the part of "body" here -->
  <div class="container mt-3">
    {{{ body }}}
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>